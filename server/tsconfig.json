{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "watch": true,
        "outDir": "build",
        "noImplicitAny": true,
        // types option has been previously configured
        "types": [
            // add node as an option
            "node"
        ],
        // typeRoots option has been previously configured
        "typeRoots": [
            // add path to @types
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}