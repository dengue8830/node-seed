{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // Executes the build defined on server package.json
    // Used especially in launch.json as preLaunchTask to execute npm build
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "npm --prefix ./server/ run build"
        }
    ]
}
