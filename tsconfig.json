{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "outDir": "dist",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}