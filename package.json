{
  "name": "server",
  "version": "1.0.0",
  "description": "Node server with clean installation, it means, no bd or client config, only apis and related stuffs",
  "scripts": {
    "start": "npm run watch",
    "watch": "nodemon -e ts  --exec \"npm run compile-ts-run-server\"",
    "compile-ts-run-server": "tsc && env NODE_ENV=development node ./dist/server.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "build": "npm run tslint && npm run build-ts && npm run build-no-ts",
    "build-ts": "tsc",
    "test": "NODE_ENV=test node_modules/.bin/jest --bail --runInBand --forceExit",
    "build-docs": "./node_modules/.bin/typedoc --out './doc' './' --ignoreCompilerErrors",
    "build-no-ts": "copyfiles -e './src/**/*.ts' --up 1  './src/**/*' ./dist/",
    "deploy": "npm install && npm run build && npm run zip-dist && npm run upload-zip && npm run delete-old-dist && npm run unzip && npm run start-pm2",
    "zip-dist": "zip -r dist.zip dist",
    "upload-zip": "scp dist.zip user@server:~/server-folder",
    "delete-old-dist": "ssh user@server 'rm -rf ~/server-folder/dist'",
    "unzip": "ssh user@server 'cd ~/server-folder/ && unzip dist.zip'",
    "start-pm2": "ssh user@server 'cd ~/server-folder/ && pm2 startOrRestart start.json --env production'"
  },
  "author": "David Rearte",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "4.0.10",
    "@types/chai-http": "3.0.3",
    "@types/config": "0.0.34",
    "@types/ejs": "2.6.0",
    "@types/express": "4.16.0",
    "@types/jest": "23.3.9",
    "@types/joi": "14.0.0",
    "@types/jsonwebtoken": "8.3.0",
    "@types/lockfile": "1.0.0",
    "@types/lodash": "4.14.118",
    "@types/mocha": "2.2.46",
    "@types/node": "8.5.2",
    "@types/nodemailer": "4.6.5",
    "@types/nodemailer-direct-transport": "1.0.31",
    "@types/nodemailer-smtp-transport": "2.7.4",
    "@types/passport": "0.4.7",
    "@types/passport-jwt": "3.0.1",
    "@types/sequelize": "github:types/sequelize",
    "@types/socket.io": "1.4.33",
    "chai": "4.1.2",
    "chai-http": "3.0.0",
    "copyfiles": "2.1.0",
    "jest": "23.6.0",
    "mocha": "4.1.0",
    "nodemon": "1.18.6",
    "ts-jest": "23.10.4",
    "tslint": "5.11.0",
    "typedoc": "0.9.0",
    "typescript": "3.1.6"
  },
  "dependencies": {
    "axios": "0.18.0",
    "body-parser": "1.18.3",
    "config": "2.0.1",
    "ejs": "2.6.1",
    "express": "4.16.4",
    "helmet": "3.15.0",
    "human-readable-ids": "1.0.4",
    "joi": "14.0.6",
    "jsonwebtoken": "8.3.0",
    "lockfile": "1.0.4",
    "moment-timezone": "0.5.23",
    "mysql2": "1.6.4",
    "nodemailer": "4.6.8",
    "passport": "0.4.0",
    "passport-jwt": "4.0.0",
    "sequelize": "4.41.2",
    "socket.io": "2.1.1",
    "sql-formatter": "2.3.2",
    "winston": "3.1.0"
  }
}
